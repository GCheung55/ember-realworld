<div class="article-meta" data-test-article-meta>
  {{article-author article=article tagName=""}}
  <button class="btn btn-sm {{if article.author.following "btn-secondary" "btn-outline-secondary"}}"
    data-test-follow-author-button {{action onFollowAuthor}}>
    <i class="ion-plus-round"></i> &nbsp; {{if article.author.following "Unfollow" "Follow"}} {{article.author.id}}
  </button>
  &nbsp;&nbsp;
  <button class="btn btn-sm {{if article.favorited "btn-primary" "btn-outline-primary"}}" {{action onFavoriteArticle}}
    data-test-favorite-article-button>
    <i class="ion-heart"></i> &nbsp; {{if article.favorited "Unfavorite" "Favorite"}} Post
    <span class="counter" data-test-article-favorites-count>{{article.favoritesCount}}</span>
  </button>
</div>