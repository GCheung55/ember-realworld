<div class="editor-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 col-xs-12">
        {{article-form
          isNew=model.isNew
          errors=model.errors
          title=draftArticle.title
          description=draftArticle.description
          body=draftArticle.body
          tags=draftArticle.tags
          disableSubmit=(and (not isValid) (not draftArticle.hasDirtyAttributes))
          onSubmit=(action "saveArticle" draftArticle)
          onChange=(action "changeAttr" draftArticle)
        }}
      </div>
    </div>
  </div>
</div>